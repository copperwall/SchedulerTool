/* Typograhpic stuff */

a {
    color: rgb(69,121,54);
    text-decoration: underline;
    cursor: pointer;
}

a:hover {
    color: rgb(27,67,15);
}

a.active {
    color: rgb(27,67,15);
}

p.caption {
    font-size: 11px;
    font-style: italic;
}

img {
    border: none;
}

/* Lists */

.inner_list {
    padding-left: 0;
}

.inner_list li {
    margin-left: 3em;
}

.lower_letter_list {
    list-style-type: lower-alpha;
}

.index_list {
    list-style: none;
    padding:0;
    margin:0;
}

.index_list li { 
    padding-left: 1em;
    text-indent: -.7em;
}

.index_list li:before {
    content: "\002022";
    padding-right: 7px;
    color: black;
}

.multiNumberedList {
    list-style: none;
}

.multiNumberedList > li:first-child {
    counter-reset: item;  /* reset counter */
}

.multiNumberedList > li {
    counter-increment: item; /* increment counter */
}

.multiNumberedList > li:before {
    content:counters(item, ".") ". ";
    font-weight:bold; /* print counter */
}

table tr {
    text-align: top;
}

/* Content */
body, html {
    width: 100%;
    height: 100%;
    margin: 0;
    overflow: hidden;
}

header {
    border-bottom: 2px solid black;
    height: 50px;
    width: 100%;
    z-index: 50;
    background-color: white;
}

header nav a {
    padding-left: 20px;
}

.left_header {
    padding-left: 20px;
    float: left;
    height: 50px;
}

.right_header {
    padding-right: 20px;
    float: right;
    height: 50px;
}

section {
    height: 100%;
    width: 100%;
}

#tableOfContents {
    background-color: rgb(220, 220, 220);
    height: 102%;
    width: 340px;
    float: left;
    padding-left: 10px;
    overflow: auto;
}

#mainList {
    margin-left: -40px;
}

#content {
    width: 100%;
    padding: 10px 10px 0px 20px;
    float: left;
    height: 100%;
    overflow: auto;
}

#toggleSwitch {
    float: left;
    width: 5px;
    height: 102%;
    background: rgb(200, 200, 200);
    cursor: pointer;
    padding: 3px;
    line-height: 800px;
}

.full_content {
    margin-left: 10px
}
